<h3>Kategorie</h3>
<table>
 	<% @categories.each do |category| %>
 	<tr>
		<td><%= category.id %></td>
		<td><%= category.name %></td>
		<td><%= link_to 'edytuj', edit_admin_category_path(category) %></td>
		<td><%= link_to 'usun', admin_category_path(category), method: :delete %></td>
	</tr>
<% end %>

</table>
	<br/>
	<h3>Dodaj kategorie</h3>

	<%= form_for(Category.new, :url => admin_categories_path) do |f| %>
	<div class="field">
		<%= f.label :nazwa_kategorii %>
		<br/>
		<%= f.text_field :name %>
 	</div>
 	<div class="actions">
		<%= f.submit %>
 	</div>
<% end %>

<p><%= link_to 'powrot', :admin_root %></p>
